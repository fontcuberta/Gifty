<div class= "container">
	<div>
		<h1><%= @occasion.description %></h1>
	</div>

    <div id = "receiver">

    	<form action="#" id="receiver_name" method="post">
    		<input style = "display: inline" id="person_name" name="name" type="text" />
    		<a id = "commit" class="modal-trigger waves-effect waves-light btn" 
    		href= <%=new_receiver_path(@occasion) %>>âœ“</a>
		</form>

    </div>
	<div id = "Users in this occasion">
		<h2>Friends in this event</h2>
		<ul>
			<% @occasion.users.each do |user_in_event|%>
				<li> <%= user_in_event.name %></li>
			<% end %>
		</ul>
	</div>


	<small> Deadline: <%= @occasion.expiry_date.strftime("%A %d, %b %Y") %></small><br/>
	<%= link_to 'Delete Event', user_occasion_path(current_user, @occasion), method: :delete, data: {confirm: 'Are you sure?'} %>
</div>


<script>
$('#commit').ready(function(){
  $('.modal-trigger').leanModal();
});
</script>
 