
<section class="row">
<article class="col s8">
	<div>
		<h1><%= @occasion.description %></h1>
	</div>

<div class="occasion-receiver">
  <% if @occasion.receiver %>
    <h4 class="receiver">To: <%= @occasion.receiver.name %></h4>
  <% else %>
 <!--  FORM FOR RECEIVER -->
    <input style = "display: inline" id="person_name" name="name" type="text" placeholder= "Receivers name here" />
    <button data-target="modal1" class="btn modal-trigger button">âœ“</button>
<!--  END OF FORM-->
  <% end %>
</div>    

    <!-- THIS IS THE MODAL CODE. PLEASE REMOVE EVERYTHING IF THIS IS TOO MUCH!!! -->
    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
      <div class="modal-content">
        <h4>Receiver's Info for <%= @occasion.description %></h4>

         <%= form_for [@occasion, @receiver], url: receivers_path(@occasion) do |form| %>
        <fieldset class="fields">
          <div class="field">
           <%= form.label :name %>
           <%= form.text_field :name, :value => "Psstttt Isa te falta algo" %>
          </div>

          <div class="field">
              <%= form.label :email %>
                <%= form.text_field :email %>
            </div>
              <div class="field">
               <%= form.label :phone %>
               <%= form.text_field :phone %>
              </div>

              <div class="field">
               <%= form.label :address %>
               <%= form.text_area :address %>
              </div>
          </fieldset>

      </div>

      <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat "><%= form.submit "OK" %></a>
         <% end %>
      </div>
    </div>
    <!-- END OF THE MODAL CODE!!! -->

<section class="friends-in-event">
		<h2>Friends in this event</h2>

        <ul class="collection">
			    <% @occasion.users.each do |user_in_event|%>
            <li class="collection-item avatar">

              <%= image_tag user_in_event.avatar.url(:thumb), class: "circle avatar z-depth-1"  %>
              <span class="title"><%= user_in_event.name%></span>
              <p><%= link_to 'Remove', happenings_path(user_in_event, @occasion), method: :delete %></p>
              <a href="#!" class="secondary-content"><i class="mdi-action-grade"></i></a>
            </li>
			<% end %>
      <i class='mdi-social-person-add' id="add-user">Add more friends</i>
      </ul>
</section>

    <!-- THIS IS THE MODAL CODE TO ADD A USER!!! -->
    <div id="modal2" class="modal modal-fixed-footer">
      <div class="modal-content">
        <h4>Add a member</h4>
        <h2>Your friends</h2>
            <ul>
                <% @users.each do |user|%>
                  <% unless @occasion.users.include? user %>
                      <a href=<%= new_happening_path(user, @occasion)%>><li><%= image_tag user.avatar.url(:thumb), class: "circle avatar z-depth-1" %> - <%= user.name%></li></a>
                    <% end %>
                <% end %>
            </ul>
      </div>

      <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">OK</a>
      </div>
    </div>
    <!-- END OF THE MODAL CODE FOR ADDING A USER!!! -->


	<small> Deadline: <%= @occasion.expiry_date.strftime("%A %d, %b %Y") %></small><br/>
</article>
    <!-- GIFT SECTION -->
  <aside class="aside col s4">
     <h4>Your Gift</h4>
     <% if @occasion.gifts.size  == 0%>
         <%= render 'gift_default' %>
     <% else %>
         <% @gift = @occasion.gifts.first%>
         <%= render 'gift' %>
     <% end %>
  </aside>
<div>
  <%= link_to 'Expire Event', user_occasion_path(current_user, @occasion), method: :delete, data: {confirm: "Are you sure? You won't be able to change it anymore"} %><br>
	<%= link_to 'Delete Event', user_occasion_path(current_user, @occasion), method: :delete, data: {confirm: 'Are you sure?'} %>

</section>
<%= link_to "Back", occasions_index_path %>


<script>
$(document).ready(function(){
  $('.modal-trigger').leanModal();
});
</script>

<script>
$('#add-user').click(function(){
  $('#person_name').val();
  $('#modal2').openModal();
});
</script>


<script>
$(document).ready(function(){
  var currentDate = new Date();
  var exp_date = new Date(<%= @occasion.expiry_date.to_f*1000%>);
  if (currentDate < exp_date) {
    console.log('Hola cabeza de chola');
  }
  else {
    $('#change_gift').attr("class", "disabled");
    $('#remove_gift').attr("class", "disabled");
  }
});
</script>

 