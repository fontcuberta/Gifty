<div class="container">

	<div><%= image_tag @user.avatar.url(:thumb), class: "circle avatar z-depth-1 inline" %>
		<h1>Welcome, <%= @user.name %></h1>
    </div>
	<h4>This are your current events</h4>

	<ul>
	    <% @occasions.each do |occasion| %> 
	      <% if occasion.expiry_date > Date.today %>
	    <div class="row">
        <div class="col s12 m4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><li class="mdi-notification-event-note large">
	          	<%= link_to occasion.description, user_occasion_path(@user, occasion) %>
	          </li></span>
            </div>
          </div>
        </div>
      </div>
	      <% end %>
		<% end %>
	</ul>

	<p>Expired events</p>
	<ul>
	    <% @occasions.each do |occasion| %>
	      <% if occasion.expiry_date < Date.today %>
	          <li>
	          	<%= link_to occasion.description, user_occasion_path(@user, occasion) %>
	          </li>
	      <% end %>
		<% end %>
	</ul>


	    <%= link_to "New Event", new_user_occasion_path(@user) %> 
</div>

