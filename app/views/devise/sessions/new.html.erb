<div class="landing-page">
<div class="container">



<div id = "logo" class="logo-div">
    <%= image_tag "logo.png", class: "logo-login"  %>
</div>
<div class="form-login">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :email, class: "form-login" %><br />
            <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
            <%= f.label :password, class: "form-login" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
                <%= f.check_box :remember_me, class: "form-login" %>
                <%= f.label :remember_me, class: "form-login" %>
            </div>
        <% end -%>

        <div class="actions">
            <%= f.submit "Log in", class: "btn modal-trigger button" %>
        </div>
    <% end %>
</div>
<%= render "devise/shared/links" %>
</div>
</div>
